@namespace Vrap.LifeLog.Web.Features.DataTables.Index
@model DataTablesViewModel

@section Head {
    <link rel="stylesheet" href="/DataTables/index.css" />
    <link rel="stylesheet" href="/table.css" />
}

<h2>Tables</h2>

<a href="/DataTables/Create" id="create-datatable" class="button-link">
    Create new
</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col"><div>Name</div></th>
            <th scope="col"><div>Add</div></th>
            <th scope="col"><div>View</div></th>
            <th scope="col"><div>Edit</div></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var table in Model.Tables)
        {
            <tr>
                <td class="wide-col"><div>@table.Name</div></td>
                <td class="narrow-col"><a href="/DataTables/@table.Id/Add">Add entry</a></td>
                <td class="narrow-col"><a href="/Data/Browse/@table.Id">View data</a></td>
                <td class="narrow-col"><a href="/DataTables/@table.Id/Edit">Edit table</a></td>
            </tr>
        }
    </tbody>
</table>
